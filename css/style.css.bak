


#menuButton {
	display: none;
}

#dropdown-nav-links {
	display: none;
}

#articles-button {
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 10px;
}


.menuButtonUnselected {
	background-color: black;
	color: white;
	border: none;
}



.menuButtonSelected {
	background-color: white;
	color: black;
	border: none;
}




.articleButtonUnselected {
	background-color: black;
	color: white;
	border: none;
}



.articleButtonSelected {
	background-color: white;
	color: black;
	border: none;
}





@media only screen and (max-width: 600px) {
  #menuButton {
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 10px;
	}
	
	#main-nav-links {
		display: none;
	}
	
	
}
