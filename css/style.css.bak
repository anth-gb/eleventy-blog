
@import url('https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;600&display=swap');


body {
	margin:0;
	padding: 0;
	font-family: 'Public Sans', sans-serif;
	}

#menuButton {
	display: none;
}


.main-nav-cont {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	background-color: black;
}


.main-nav-cont a.main-logo {
	color: white;
	text-decoration: none;
	display: block;
	padding: 0;
	
	
}


#dropdown-nav-links {
	
	width: 100%;
	
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	
	padding: 50px 10%;
	
	
	
}

.dropdown-nav-links-collapsed {
	display: none;
}

.dropdown-nav-links-expanded {
	display: flex;
}

.dropdown-nav-links-collapsed-mobile {
	display: none;
}

.dropdown-nav-links-expanded-mobile {
	display: none;
}






.dropdown-nav-links-desc {
	
	padding: 0;
	margin: 0 50px 0 0;
	
}

.dropdown-nav-links-desc p {
	display: block;
	margin: 0;
	
	
}


.dropdown-nav-links-link-cont {
	
	
	
	
}

#dropdown-nav-links a {
	display: block;
	padding: 0 0 20px 0;
	
	
}

#articles-button {
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 20px 15px 20px 15px;
	cursor:pointer;
	font-size: 1rem;
	
	font-family: 'Public Sans', sans-serif;
	font-weight: 600;
	
}




#main-nav-links {
	
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	
	background-color: black;
	color: white;
	font-weight: 600;
	font-size: 1rem;
	
}

.main-nav-links-links-cont {
	
	display: flex;
	flex-direction: row;
	
	align-items: center;
	
	
}

#main-nav-links a {					/* Everything applied to nav links must be applied to '#articles-button' separately */
	text-decoration: none;
	color: white;
	padding: 20px 15px 20px 15px;
}

.menuButtonUnselected {
	background-color: black;
	color: white;
	border: none;
}



.menuButtonSelected {
	background-color: white;
	color: black;
	border: none;
}




.articleButtonUnselected {
	background-color: black;
	color: white;
	border: none;
}



.articleButtonSelected {
	
	
	background-color: white;
	color: black;
	border: none;
}

.hr-mobile {
	display: none;
	
}



@media only screen and (max-width: 600px) {
  #menuButton {
	display: flex;
	flex-direction: row;
	align-items: center;
	padding: 10px;
	cursor:pointer;
	font-family: 'Public Sans', sans-serif;
	}
	
	
	
	.main-nav-cont a.main-logo {
	width: 50%;
	
	
}
	
	.main-nav-cont {
	
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
	background-color: red;
	width: 100%;
}


.secondary-nav-cont {
	width: 100%;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	background-color: black;
}
	
	#main-nav-links {
		display: none;
		
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
		width: 100%;
		
	}
	
	
	#articles-button {
	color: black;
	
}


.articleButtonUnselected {
	background-color: white;
	color: black;
	border: none;
}



.articleButtonSelected {
	
	
	background-color: white;
	color: black;
	border: none;
}

	
	
	#main-nav-links {
	
	
	background-color: white;
	color: black;
	
	
}
	
	
	#main-nav-links a {					
	
	color: black;
	width: 100%;
	
}
	
	.main-nav-links-links-cont {
	width: 100%;
	display: flex;
	flex-direction: column;
	
	align-items: flex-start;
	
	
}


#dropdown-nav-links-mobile {
	
	width: 100%;
	
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	font-weight: 400;
	padding: 20px 0;
	
	
	
}

#dropdown-nav-links-mobile a {
	display: block;
	padding: 0 0 20px 0;
	margin: 0 0 0 15px;
	
	
}


#dropdown-nav-links {
	display: none;
	
	
	
}


.dropdown-nav-links-collapsed-mobile {
	display: none;
}

.dropdown-nav-links-expanded-mobile {
	display: flex;
}




.dropdown-nav-links-desc {
	
	display: none;
	
}


.hr-mobile {
	display: block;
	width: 100%;
	color: gray;
}
	
	
	
	
}
